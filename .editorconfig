# EditorConfig ayuda a mantener estilos de codificaci√≥n consistentes entre diferentes editores e IDEs

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{html,css}]
max_line_length = 120
